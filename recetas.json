{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "eu-central-1",
        "source_ami": "ami-0c960b947cbb2dd16",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "mimo-play-recetas {{timestamp}}"
      }
    ],
    "provisioners": [
    {
      "type": "file",
      "source": "recetas.service",
      "destination": "/home/ubuntu/"
    },
    {
        "type": "file",
        "source": "./target/universal/play-practica-final-1.0-SNAPSHOT.zip",
        "destination": "/home/ubuntu/"
    },
    {
        "type": "file",
        "source": "start.sh",
        "destination": "/home/ubuntu/"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update",
        "sudo apt install -y default-jdk",
        "sudo cp /home/ubuntu/play-practica-final-1.0-SNAPSHOT.zip /opt",
        "sudo unzip /opt/play-practica-final-1.0-SNAPSHOT.zip",
        "sudo mv /opt/play-practica-final-1.0-SNAPSHOT /opt/recetas",
		"sudo cp /home/ubuntu/start.sh /opt/recetas",
        "sudo chmod +x /opt/spring-music/start.sh",
        "sudo cp /home/ubuntu/recetas.service /etc/systemd/system",
        "sudo systemctl daemon-reload",
        "sudo systemctl enable recetas.service"
      ]
    }
  ]
}
