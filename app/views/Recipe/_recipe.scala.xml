@(recipe: Recipe)

<recipe>
    <id>@recipe.getId()</id>
    <name>@recipe.getName()</name>
    <description>@recipe.getDescription()</description>
    <visibility>@recipe.getVisibility()</visibility>
    @views.xml.common.tags(recipe.getTagList())
    @views.xml.Ingredient.ingredients(recipe.getIngredientList())
    <author>@recipe.getAuthor()</author>
    @if(false){
    <vegans/>
    }
</recipe>