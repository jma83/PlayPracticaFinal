# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST /user controllers.UserController.createUser(request: Request)
GET /user controllers.UserController.getUser(request: Request)
PUT /user controllers.UserController.updateUser(request: Request)
DELETE /user controllers.UserController.deleteUser(request: Request)
POST /login controllers.UserController.loginUser(request: Request)

POST /recipe controllers.RecipeController.createRecipe(request: Request)
GET /recipe controllers.RecipeController.getRecipe(request: Request)
PUT /recipe controllers.RecipeController.updateRecipe(request: Request)
DELETE /recipe controllers.RecipeController.deleteRecipe(request: Request)

POST /ingredient controllers.IngredientController.createIngredient(request: Request)
GET /ingredient controllers.IngredientController.getIngredient(request: Request)
PUT /ingredient controllers.IngredientController.updateIngredient(request: Request)
DELETE /ingredient controllers.IngredientController.deleteIngredient(request: Request)

POST /recipeBook controllers.RecipeBookController.createRecipeBook(request: Request)
GET /recipeBook controllers.RecipeBookController.getRecipeBook(request: Request)
PUT /recipeBook controllers.RecipeBookController.updateRecipeBook(request: Request)
DELETE /recipeBook controllers.RecipeBookController.deleteRecipeBook(request: Request)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
